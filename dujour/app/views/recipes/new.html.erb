<%=stylesheet_link_tag 'application'%>
<link href='https://fonts.googleapis.com/css?family=Bad+Script' rel='stylesheet' type='text/css'>

<h1>New Recipe</h1>

<%=form_for @recipe do |f|%>

<%=f.label :name%><br>
<%=f.text_field :name%><br>
<br>
<%=f.label :ingredients%><br><br>
<%=f.fields_for :ingredients, [@recipe.ingredients.build]*5 do |ingr_fields|%>
  <%=ingr_fields.label :amount%>---------------------------<%=ingr_fields.label :name%><br>
  <%=ingr_fields.text_field :amount%>  <%=ingr_fields.text_field :name%>
<br>
<%end%>
<br>

<%=f.label :instructions%><br>
<%=f.text_area :instructions, size: '60x10'%><br>

<br><%=f.submit%>
<%end%>